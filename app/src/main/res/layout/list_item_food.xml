<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/list_item_food_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_dish"
        app:tint="@color/dislplay_icon_tint" />

    <TextView
        android:id="@+id/list_item_food_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="Food Name Placeholder"
        android:textAlignment="viewStart"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/list_item_food_calories_label"
        app:layout_constraintStart_toEndOf="@+id/list_item_food_image" />

    <TextView
        android:id="@+id/list_item_food_calories_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:paddingEnd="5dp"
        android:text="Calories:"
        android:textAlignment="viewStart"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/list_item_food_image"
        app:layout_constraintStart_toEndOf="@+id/list_item_food_image"
        app:layout_constraintTop_toBottomOf="@+id/list_item_food_image" />

    <TextView
        android:id="@+id/list_item_food_calories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="80dp"
        android:text="0"
        android:textAlignment="viewStart"
        android:textSize="14sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/list_item_food_calories_label"
        app:layout_constraintStart_toEndOf="@+id/list_item_food_calories_label" />


    <TextView
        android:id="@+id/list_item_food_type_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingEnd="5dp"
        android:text="Type:"
        android:textAlignment="viewStart"
        android:textSize="14sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/list_item_food_type"
        app:layout_constraintStart_toEndOf="@+id/list_item_food_calories" />

    <TextView
        android:id="@+id/list_item_food_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Type Placeholder"
        android:textAlignment="viewStart"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/list_item_food_type_label"
        app:layout_constraintTop_toBottomOf="@+id/list_item_food_name" />

</androidx.constraintlayout.widget.ConstraintLayout>